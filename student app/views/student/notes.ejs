<% layout('../layout')%>
    <% block('title', 'teacher home')%>

        <header>
            <div class="page-heading3">
                <div class="container">
                    <h1>
                        <%=user.student.fullname%> Note</h1>
                    <p>You can check out your notes</p>
                    <div class="row text-center">
                        <a href="/dashboard" type="button" class="btn btn-default btn-lg">Return to dashboard</a>
                    </div>
                </div>
            </div>
        </header>
        
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="list-group">
                        <div class="list-group-item" style="font-weight: bold;">
                            <span>
                                Module
                            </span>
                            <span class="pull-right">
                                Note
                            </span>
                        </div>
                        <% for(var i =0; i<notes.length ; i++){%>
                            <%if(i!==6){%>
                            <div class="list-group-item" >
                                <span>
                                    <%=notes[i].module%>
                                </span>
                                <span class="pull-right">
                                    <%=notes[i].value%>
                                </span>
                    
                            </div>
                            <%}%>                               
                        <%}%>
                        <%if(notes[6]){%>
                            <div class="list-group-item">
                                <span>
                                    Moyenne
                                </span>
                                <span class="pull-right">
                                    <%=notes[6].moy%>
                                </span>
                        
                            </div>
                        <%}%>
                        
                    </div>
                </div>
            </div>
            
        </div>