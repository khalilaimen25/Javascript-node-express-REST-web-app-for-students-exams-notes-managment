<% layout('../layout')%>
<% block('title', 'add note')%>

<header>
    <div class="page-heading2">
        <div class="container">
            <h1><%=students%> Note</h1>
            <p>You can add and update students notes</p>
            <p>Module : <%= user.teacher.codeModule %></p>
            <div class="row">
                <div class="container">
                    <form action="" method="post">
                        <div class="form-group">
                             Note : 
                            <input  name="note" style="color:#000;">
                            <button type="submit" class="btn btn-primary btn-lg">Add note</button>
                            <a href="/students" class="btn btn-default btn-lg">Cancel</a>
                        </div>
                        
                    </form>
                </div>
                
            </div>
        </div>
    </div>
    
    

</header>